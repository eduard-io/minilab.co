<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      {% if title %}
        {{ title }} - minilab.co
      {% else %}
        minilab.co
      {% endif %}
    </title>
    
    <link rel="canonical" href="https://minilab.co" />
    <meta name="robots" content="index,follow" />
    
    <meta name="description" content="A tiny lab on the internet. An independent initiative for small services, experiments, and ideas. Run by Eduard GimÃ©nez." />
    <meta name="keywords" content="minimalist website, personal publishing, digital garden, indie web, static site, eleventy, creative lab, personal blog, microblog, family website, digital home, minilab, eduard gimenez" />
    <meta name="author" content="minilab.co" />
    
    <meta name="theme-color" content="#f6f8fa" media="(prefers-color-scheme: light)" />
    <meta name="theme-color" content="#202021" media="(prefers-color-scheme: dark)" />
    <meta name="color-scheme" content="light dark" />
    
    <link rel="preconnect" href="https://rsms.me/" />
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
    <!-- <link rel="stylesheet" href="/styles/newnew.css" /> -->
    <link rel="stylesheet" href="/styles/brutal-lab.css" />
    
    {# Analytics #}
    {% if env.CONTEXT == "production" %}
      <link rel="preconnect" href="https://cloud.umami.is" />
      <script
        defer
        src="https://cloud.umami.is/script.js"
        data-website-id="e28f437c-7e92-4049-a866-5bcbb4580d8d"
      ></script>
    {% endif %}
  </head>

  <body>
    <main class="wrap">
      {% include "components/header.njk" %}
  
      <article class="content">
        {% if title %}<h1 class="page-title">{{ title }}</h1>{% endif %}
        {{ content | safe }}
      </article>
  
      {% include "components/footer.njk" %}
    </main>
  </body>
</html>
